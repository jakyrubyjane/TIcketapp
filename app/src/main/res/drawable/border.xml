<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Warna latar belakang -->
            <stroke
                android:color="#808080"
            android:width="3dp" /> <!-- Lebar garis tepi -->
            <padding
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"
                android:bottom="5dp" /> <!-- Padding untuk teks -->
        </shape>
    </item>

    <!-- Isi -->
    <item android:right="1dp" android:left="1dp" android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#00FFFFFF" /> <!-- Transparent agar background tidak tumpul -->
        </shape>
    </item>
</layer-list>
