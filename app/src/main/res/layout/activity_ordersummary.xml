<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ordersummary"
    android:background="@drawable/bgapp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/summaryTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Summary"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/nomor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Number: 490242"
                        android:textSize="20sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/bioskopSummary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bioskop: Bioskop A"
                        android:textSize="20sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/seatSummary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seat: Seat A"
                        android:textSize="20sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/dateSummary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date: 2023-10-14"
                        android:textSize="20sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/priceSummary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price: Rp35.000"
                        android:textSize="20sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/paymentSummary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payment Method: Credit Card"
                        android:textSize="20sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/bankSummary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bank: Bank A"
                        android:textSize="20sp"
                        android:layout_marginBottom="8dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
